<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".Aboutthegame">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About the game:"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This game is about fish eating different irrespective knowing which is harmful for her. This game is developed by Gunjan Verma with lot of dedication and love. As a beginner, this is the second game which I developed.
Thank you for installing the game."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/atg"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:shadowColor="#007E1313"
        android:text="Back to menu"
        android:textSize="30sp"
        android:textColor="@color/White"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="80dp"/>

</RelativeLayout>