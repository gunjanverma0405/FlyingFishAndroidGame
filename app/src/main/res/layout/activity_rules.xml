<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".Rules">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rules: "
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="34sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. You will be given 3 life."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Yellow ball will give 10 points."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Green ball will give 20 points."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_below="@+id/text3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Red ball will deduct 5 points and your one life will be reduced."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_below="@+id/text4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. After all the life are deducted, game will be over and you score will be shown."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_below="@+id/text5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"/>

    <Button
        android:id="@+id/rules"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text6"
        android:layout_centerHorizontal="true"
        android:shadowColor="#007E1313"
        android:text="Back to menu"
        android:textSize="30sp"
        android:textColor="@color/White"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENJOY!"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_below="@+id/rules"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="2dp"/>

</RelativeLayout>